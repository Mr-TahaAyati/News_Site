@page
@model Weblog_New.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ثبت نام ";
}
<div class="container">
    <form method="post">
    <h1>@ViewData["Title"]</h1>
        <div class="input-group">
            <i class="fa fa-user"></i>
            <input type="text" asp-for="FullName" placeholder="نام و نام خانوادگی" />
            <span asp-validation-for="FullName" style="color:red"></span>
        </div>
        <div class="input-group">
            <i class="fa fa-user"></i>
            <input type="text" asp-for="UserName" placeholder="نام کاربری" />
            <span asp-validation-for="UserName" style="color:red"></span>
        </div>
        <div class="input-group">
            <i class="fa fa-lock"></i>
            <input type="password" asp-for="Password" placeholder="کلمه عبور" required id="password" />
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <button type="submit" class="btn">ثبت نام</button>
        <div class="links">
            <a asp-page="Login">ورود</a>
        </div>
    </form>
</div>

