@page
@model Weblog_New.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود ";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div class="input-group">
            <i class="fa fa-user"></i>
            <input type="text" placeholder="نام کاربری" asp-for="UserName" />
            <span asp-validation-for="UserName" style="color:red"></span>
        </div>
        <div class="input-group">
            <i class="fa fa-lock"></i>
            <input type="password" placeholder="کلمه عبور" asp-for="Password" />
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <button type="submit" class="btn">ورود</button>
        <div class="links">
            <a asp-page="Register">ثبت نام</a>
        </div>
    </form>
</div>
